<form action="/events/create" method="post">
  <input type="text" name="organizer_name" placeholder="Name" value=<%= @organizer_name %>><div class="errors"><%= @errors[:name] %></div> <br>
  <input type="text" name="organizer_email" placeholder="Email" value=<%= @organizer_email %>><div class="errors"><%= @errors[:email] %></div> <br>  <!-- alternatively, we can use type="email" -->
  <input type="text" name="title" placeholder="Title" value=<%= @title %>><div class="errors"><%= @errors[:title] %></div> <br>
  <input type="date" name="date" value=<%= @date %>><div class="errors"><%= @errors[:date] %></div> <br>
  <input type="submit" value="submit">
</form>